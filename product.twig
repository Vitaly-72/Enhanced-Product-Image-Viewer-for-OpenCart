                cleanup();
            },
            change: function() {
                setTimeout(function() {
                    resetZoom();
                    initZoomAndDrag();
                    adaptForMobile();
                    completelyBlockAllCloseEvents();
                    updateNavigationButtons(); // Обновляем кнопки навигации при смене изображения
                }, 50);
            },
            resize: function() {
                adaptForMobile();
            }
        }
    });

    // Функция добавления кнопок управления
    function addControls() {
        $('.mfp-custom-controls').remove();
        
        var controlsHTML = `
            <div class="mfp-custom-controls">
                <div class="mfp-controls-group">
                    <!-- Кнопки навигации по галерее -->
                    <button type="button" class="mfp-prev" title="Предыдущее изображение">
                        <i class="fa fa-chevron-left"></i>
                    </button>
                    
                    <!-- Кнопки масштабирования -->
                    <button type="button" class="mfp-zoom-out" title="Отдалить">
                        <i class="fa fa-search-minus"></i>
                    </button>
                    <button type="button" class="mfp-zoom-reset" title="Сбросить масштаб">
                        <span class="zoom-text">100%</span>
                    </button>
                    <button type="button" class="mfp-zoom-in" title="Приблизить">
                        <i class="fa fa-search-plus"></i>
                    </button>
                    
                    <!-- Кнопка закрытия -->
                    <button type="button" class="mfp-custom-close" title="Закрыть">
                        <i class="fa fa-times"></i>
                    </button>
                    
                    <!-- Следующее изображение -->
                    <button type="button" class="mfp-next" title="Следующее изображение">
                        <i class="fa fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        `;
        
        $('body').append(controlsHTML);
        
        // Обновляем обработчики для кнопок навигации
        updateNavigationHandlers();
        updateNavigationButtons();
    }

    // Обновление состояния кнопок навигации
    function updateNavigationButtons() {
        var instance = $.magnificPopup.instance;
        var items = instance.items || [];
        var currentIndex = instance.index || 0;
        var totalItems = items.length;
        var hasPrev = currentIndex > 0;
        var hasNext = currentIndex < totalItems - 1;

        // Обновляем кнопки предыдущего/следующего
        if (hasPrev) {
            $('.mfp-prev').removeClass('mfp-disabled');
        } else {
            $('.mfp-prev').addClass('mfp-disabled');
        }

        if (hasNext) {
            $('.mfp-next').removeClass('mfp-disabled');
        } else {
            $('.mfp-next').addClass('mfp-disabled');
        }
    }

    // Обновление обработчиков навигации
    function updateNavigationHandlers() {
        // Предыдущее изображение
        $('.mfp-prev').off('click').on('click', function(e) {
            if ($(this).hasClass('mfp-disabled')) return;
            e.preventDefault();
            e.stopImmediatePropagation();
            $.magnificPopup.instance.prev();
            return false;
        });
        
        // Следующее изображение
        $('.mfp-next').off('click').on('click', function(e) {
            if ($(this).hasClass('mfp-disabled')) return;
            e.preventDefault();
            e.stopImmediatePropagation();
            $.magnificPopup.instance.next();
            return false;
        });
        
        // Кнопка закрытия
        $('.mfp-custom-close').off('click').on('click', function(e) {
            e.preventDefault();
            e.stopImmediatePropagation();
            $.magnificPopup.close();
            return false;
        });
    }

    // Полная блокировка всех событий закрытия
    function completelyBlockAllCloseEvents() {
        $('.mfp-bg, .mfp-container, .mfp-img, .mfp-figure, .mfp-content')
            .off('click')
            .css('cursor', 'default')
            .on('click', function(e) {
                e.preventDefault();
                e.stopImmediatePropagation();
                return false;
            });
        
        $(document)
            .off('keydown')
            .on('keydown', function(e) {
                e.preventDefault();
                e.stopImmediatePropagation();
                return false;
            });
    }

    // Адаптация для мобильных устройств
    function adaptForMobile() {
        var $img = $('.mfp-img');
        var $figure = $('.mfp-figure');
        
        if ($img.length === 0) return;
        
        var windowWidth = $(window).width();
        var windowHeight = $(window).height();
        
        if (windowWidth <= 768) {
            var maxWidth = windowWidth - 40;
            var maxHeight = windowHeight - 140; // Уменьшаем отступ так как убрали счетчик
            
            $img.css({
                'max-width': maxWidth + 'px',
                'max-height': maxHeight + 'px',
                'width': 'auto',
                'height': 'auto'
            });
            
            $figure.css({
                'line-height': 'normal'
            });
            
            maxZoom = 3;
        } else {
            $img.css({
                'max-width': '90vw',
                'max-height': '90vh'
            });
            
            maxZoom = 4;
        }
        
        if (currentZoom === 1) {
            resetZoom();
        }
    }

    // Инициализация зума и перетаскивания
    function initZoomAndDrag() {
        var $img = $('.mfp-img');
        
        if ($img.length === 0) return;
        
        resetZoom();
        
        // Обработчики для кнопок зума
        $('.mfp-zoom-in').off('click').on('click', function(e) {
            e.preventDefault();
            e.stopImmediatePropagation();
            zoomIn();
            return false;
        });
        
        $('.mfp-zoom-out').off('click').on('click', function(e) {
            e.preventDefault();
            e.stopImmediatePropagation();
            zoomOut();
            return false;
        });
        
        $('.mfp-zoom-reset').off('click').on('click', function(e) {
            e.preventDefault();
            e.stopImmediatePropagation();
            resetZoom();
            return false;
        });
        
        // Обработчики для перетаскивания
        initDragHandlers($img);
        
        // Зум колесиком мыши
        $img.off('wheel').on('wheel', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            if (e.originalEvent.deltaY < 0) {
                zoomIn();
            } else {
                zoomOut();
            }
        });
        
        // Обработчик изменения ориентации
        $(window).off('orientationchange').on('orientationchange', function() {
            setTimeout(function() {
                adaptForMobile();
                if (currentZoom === 1) {
                    resetZoom();
                }
            }, 300);
        });
    }

    // Функции зума
    function zoomIn() {
        if (currentZoom < maxZoom) {
            currentZoom = Math.min(currentZoom + 0.5, maxZoom);
            applyZoom();
        }
    }

    function zoomOut() {
        if (currentZoom > minZoom) {
            currentZoom = Math.max(currentZoom - 0.5, minZoom);
            applyZoom();
        }
    }

    function resetZoom() {
        currentZoom = 1;
        currentTranslateX = 0;
        currentTranslateY = 0;
        applyZoom();
    }

    function applyZoom() {
        var $img = $('.mfp-img');
        if ($img.length === 0) return;
        
        $img.css({
            'transform': `scale(${currentZoom}) translate(${currentTranslateX}px, ${currentTranslateY}px)`,
            'transform-origin': 'center center',
            'transition': 'transform 0.3s ease'
        });
        
        $('.mfp-zoom-reset .zoom-text').text(Math.round(currentZoom * 100) + '%');
        
        if (currentZoom > 1) {
            $img.css('cursor', 'grab');
            $('.mfp-container').addClass('zoom-mode');
        } else {
            $img.css('cursor', 'default');
            $('.mfp-container').removeClass('zoom-mode');
        }
    }

    // Инициализация перетаскивания
    function initDragHandlers($img) {
        var isDragging = false;
        var startX, startY;
        var startTranslateX, startTranslateY;
        
        $img.off('mousedown touchstart').on('mousedown touchstart', function(e) {
            if (currentZoom <= 1) return;
            
            e.preventDefault();
            e.stopPropagation();
            
            isDragging = true;
            
            var clientX = e.type === 'touchstart' ? e.originalEvent.touches[0].clientX : e.clientX;
            var clientY = e.type === 'touchstart' ? e.originalEvent.touches[0].clientY : e.clientY;
            
            startX = clientX;
            startY = clientY;
            startTranslateX = currentTranslateX;
            startTranslateY = currentTranslateY;
            
            $img.css({
                'cursor': 'grabbing',
                'transition': 'none'
            });
            
            if (e.type === 'touchstart') {
                document.body.style.overflow = 'hidden';
                document.documentElement.style.overflow = 'hidden';
            }
        });
        
        $(document).off('mousemove touchmove').on('mousemove touchmove', function(e) {
            if (!isDragging || currentZoom <= 1) return;
            
            e.preventDefault();
            
            var clientX = e.type === 'touchmove' ? e.originalEvent.touches[0].clientX : e.clientX;
            var clientY = e.type === 'touchmove' ? e.originalEvent.touches[0].clientY : e.clientY;
            
            var deltaX = clientX - startX;
            var deltaY = clientY - startY;
            
            var imgWidth = $img.width();
            var imgHeight = $img.height();
            var containerWidth = $('.mfp-container').width();
            var containerHeight = $('.mfp-container').height();
            
            var maxMoveX = Math.max(0, (imgWidth * currentZoom - containerWidth) / 2);
            var maxMoveY = Math.max(0, (imgHeight * currentZoom - containerHeight) / 2);
            
            currentTranslateX = startTranslateX + deltaX;
            currentTranslateY = startTranslateY + deltaY;
            
            currentTranslateX = Math.max(Math.min(currentTranslateX, maxMoveX), -maxMoveX);
            currentTranslateY = Math.max(Math.min(currentTranslateY, maxMoveY), -maxMoveY);
            
            $img.css({
                'transform': `scale(${currentZoom}) translate(${currentTranslateX}px, ${currentTranslateY}px)`
            });
        });
        
        $(document).off('mouseup touchend').on('mouseup touchend', function(e) {
            if (!isDragging) return;
            
            isDragging = false;
            
            $img.css({
                'cursor': 'grab',
                'transition': 'transform 0.3s ease'
            });
            
            document.body.style.overflow = '';
            document.documentElement.style.overflow = '';
        });
    }

    // Очистка
    function cleanup() {
        currentZoom = 1;
        currentTranslateX = 0;
        currentTranslateY = 0;
        $('.mfp-custom-controls').remove();
        
        $(document).off('mousemove touchmove mouseup touchend');
        $(window).off('orientationchange');
        $('.mfp-zoom-in, .mfp-zoom-out, .mfp-zoom-reset, .mfp-custom-close, .mfp-prev, .mfp-next').off('click');
        $('.mfp-bg, .mfp-container, .mfp-img, .mfp-figure, .mfp-content').off('click');
        
        document.body.style.overflow = '';
        document.documentElement.style.overflow = '';
    }
});
